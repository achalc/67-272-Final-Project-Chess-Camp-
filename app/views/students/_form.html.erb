<%= simple_form_for(@student, html: { class: 'form-horizontal'}) do |f| %>



	<h3><%= controller.action_name.capitalize %> Student</h3>

		<%= f.input :first_name %>
		<%= f.input :last_name %>
		<%= f.input :family_id, :collection => Family.active.alphabetical.map { |e| e.family_name }, :prompt => true %>
		<!-- need to fix the date  -->
		<%= f.input :date_of_birth, label: "Date of Birth", as: :date, start_year: Time.now.year - 90, end_year: Time.now.year - 4, order: [:month, :day, :year] %>
		<%= f.input :rating %>
		<%= f.input :active %>


		<div class="form-actions">
			<%= f.submit nil, class: 'button radius' %>
			<%= link_to 'Back to list of students', students_path, :class => 'button secondary radius' %>
		</div>
<% end %>

