<h3>Active Students</h3>

<table class="table">
	<tr>
		<th width="200">Name</th>
		<th width="100">Age</th>
		<th width="100">Rating</th>
		<th></th>
	</tr>

	<% @active_students.each do |student| %>
		<tr>
			<td><%= link_to student.name, student_path(student)%></td>
			<td><%= student.age %></td>
			<td>
				<% if student.rating == 0 %>
					<%= "Unrated" %><br /><br />
				<% else %>
					<%= student.rating %><br /><br />
				<% end %>
			</td>
			<td><%= link_to "Edit", edit_student_path(student), class: "buttony tiny radius" %></td>
		</tr>

	<% end %>
</table>
<span class="paginate">
<%= will_paginate @active_students, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>