<%= simple_nested_form_for @camp, :html => { :class => 'form-horizontal' } do |camp_form| %>
    <div class="row">
      <div class="span7">
        <fieldset>
          <legend><%= controller.action_name.capitalize %> Camp</legend>
          <%= render :partial => "camp_fields", :locals => { :f => camp_form } %>
        </fieldset>
      </div>

    <div class="span5">
      <legend>Add Registrations for this Camp</legend>
          <%= camp_form.simple_fields_for :registrations do |registration_form| %>
            <%= render :partial => "registration_fields", :locals => { :f => registration_form } %>
          <% end %> 
          <p>
            <br /><%= camp_form.link_to_add("Add Registration", :registrations, :class => 'button tiny') %>
          </p>
      </div>
    </div>
    <div class="form-actions">
      <%= camp_form.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', camps_path, :class => 'button secondary' %>
    </div>
  <% end %>