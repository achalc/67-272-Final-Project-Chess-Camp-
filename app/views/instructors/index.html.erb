<div class="row">
  <div class="small-7 columns">
    <!-- MAIN CONTENT GOES HERE -->
    <% if can? :update, Instructor %>
      <%= render :partial => "active_instructors" %>
      <br />
    <% else %>
      <%= render partial: "active_instructors_public" %>
      <br />
    <% end %>
    <% if can? :create, Instructor %>
      <%= link_to "Add a new instructor", new_instructor_path, class: "button tiny radius" %>
    <% end %>
  </div>

  <div class="small-1 columns">
    &nbsp;
  </div>

  <div class="small-4 columns">
    <!-- SIDEBAR CONTENT GOES HERE -->
    <% if can? :manage, Instructor %>
      <%= render partial: 'inactive_instructors' %>
    <% end %>
  </div>
</div>