<%= simple_form_for(@registration, html: { class: 'form-horizontal'}) do |f| %>



	<h3><%= controller.action_name.capitalize %> Registration </h3>

		<%= f.input :camp_id, collection: Camp.active.alphabetical, label_method: :name, value_method: :id, prompt: "Select camp" %>
		<%= f.input :student_id, collection: Student.active.alphabetical,  value_method: :id, prompt: "Select student" %>
		<%= f.select :payment_status, collection: %w[deposit full], prompt: "Select a payment status" %>
		<%= f.input :points_earned %>




		<div class="form-actions">
			<%= f.submit nil, class: 'button radius' %>
			<%= link_to 'Back to student details', @student, :class => 'button secondary radius' %>
		</div>
<% end %>

